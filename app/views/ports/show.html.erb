<p>
  <b>Name:</b>
  <%=h @port.name %>
</p>

<p>
  <b>Path:</b>
  <%=h @port.path %>
</p>

<p>
  <b>Version:</b>
  <%=h @port.version %>
</p>

<p>
  <b>Description:</b>
  <%=h @port.description %>
</p>

<p>
  <b>Licenses:</b>
  <%=h @port.licenses %>
</p>

<p>
  <b>Categories:</b>
  <%=h @port.categories %>
</p>

<p>
