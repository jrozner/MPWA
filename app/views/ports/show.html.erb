<% form_for([@port, @comment]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :body, "Text" %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Edit', edit_port_path(@port) %> |
